@model Sampe.Cargo

@{
    ViewBag.Title = "Editar";
}
<div class="container ">
    <div class="col-xs-10 col-sm-10 col-md-6">      <br />
    @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
			<ol class="breadcrumb">
				<li><a href="/Home/Index">Home</a></li>
				<li><a href="/Home/Cadastros">Cadastros</a></li>
				<li><a href="/Cargos/Index">Cargos</a></li>
				<li class="active">Editar</li>
			</ol>
            <h4>Editar Cargo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CargoId)
            <div class="form-group">
                @Html.LabelFor(model => model.NomeCargo, "Cargo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NomeCargo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeCargo, "", new { @class = "text-danger" })
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-s12 l4">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                    <a class="btn btn-default" href="/Cargos/Index">Voltar</a>
                </div>
            </div>
        </div>
        }


    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
