@model IEnumerable<Sampe.Models.OrdemProducaoPeca>

@{
	/**/

	ViewBag.Title = "ExibeOpPeca";
	Layout = "~/Views/Relatorio/LayoutRelatorio.cshtml";
}
@foreach (var item in Model)
{
	<div class="container">
		<table class="table table-bordered">
			<tr>
				<th>
					<div class="col-md-4 ">
						<img class="img-responsive " src="~/img/marcanti.gif" style="height: 80px;width: 250px;">
					</div>
				</th>
				<th>
					<div class="col-md-4 text-center">
						<h4>Ordens de Produção </h4>
						<h4>PECA</h4>
						<h4>@item.CodigoIdentificador</h4>
					</div>
				</th>
				<th>
					<div class="col-md-4">
						<img class="img-responsive " src="~/img/marca.png" style="margin:0 auto; width:180px; height:100px;">
					</div>
				</th>
			</tr>
		</table>
		<br />
		<div class="container">

			<div class="row">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Produto</th>
							<th>Unidades Produzidas</th>
							<th>Data</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.Expectativa.Produto)</td>
							<td>@Html.DisplayFor(model => item.UnidadesProduzidas)</td>
							<td>@item.Data.ToString("dd/MM/yyyy")</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Produção Inicio</th>
							<th>Produção Fim</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.ProdIncio)</td>
							<td>@Html.DisplayFor(model => item.ProdFim)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Cor</th>
							<th>Máquina</th>
							<th>Matéria-Prima</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.CorPeca.NomeCorPeca)</td>
							<td>@Html.DisplayFor(model => item.Maquina.NomeMaquina)</td>
							<td>@Html.DisplayFor(model => item.MateriaPrima)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Master (Lote)</th>
							<th>Matéria-Prima (Lote)</th>
							<th>Consumo Matéria-Prima</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.MasterLote)</td>
							<td>@Html.DisplayFor(model => item.MPLote)</td>
							<td>@Html.DisplayFor(model => item.MPConsumo)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Fornecedor</th>
							<th>Temperatura Água</th>
							<th>Nível Óleo</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.Fornecedor)</td>
							<td>@Html.DisplayFor(model => item.TempAgua)</td>
							<td>@Html.DisplayFor(model => item.NivelOleo)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Galho</th>
							<th>Off-Spec</th>
							<th>Refugo</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.Galho) g</td>
							<td>@Html.DisplayFor(model => item.OffSpec)</td>
							<td>@Html.DisplayFor(model => item.RefugoKg) Kg</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Contador Inical</th>
							<th>Contador Final</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.ContadorInicial)</td>
							<td>@Html.DisplayFor(model => item.ContadorInicial)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br /><br />
			
				<div class="row">
					<h4>Pausa</h4>
					<hr />
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Hora Inicio</th>
								<th>Hora Retorno</th>
								<th>Motivo</th>
								<th>Observações</th>
							</tr>
						</thead>
						<tbody id="pausa">
							@foreach (var x in item.Paradas)
							{
								<tr>
									<td>@x.HoraParada</td>
									<td>@x.HoraRetorno</td>
									<td>@x.Motivo</td>
									<td>@x.Observacoes</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<br />
			
				<div class="row">
					<h4>Controle de Qualidade</h4>
					<hr />
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Hora</th>
								<th>Ciclo</th>
								<th>Peso da Peça</th>
								<th>Inspeção</th>
								<th>Assinatura</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var x in item.ControlesDeQualidade)
			{
				<tr>
					<td>@x.Hora</td>
					<td>@x.Ciclo</td>
					<td>@x.PesoDaPeca</td>
					<td>@Html.DisplayFor(model => x.Peso) Peso @Html.DisplayFor(model => x.Cor) Cor @Html.DisplayFor(model => x.Dimensao) Dimensão</td>
					<td>@x.Usuario.NomeUsuario</td>
				</tr>
}
						</tbody>
					</table>
				</div>
			<div class="row">
				@Html.DisplayFor(model => item.Status) Validação do Supervisor
			</div>
		</div>
	</div>
}