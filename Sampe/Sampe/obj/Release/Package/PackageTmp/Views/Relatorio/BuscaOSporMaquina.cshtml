@model Sampe.FormularioOrdemServico
@{
    ViewBag.Title = "Ordem de Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Formulários por Máquina </h2>
    <a href="/FormularioOrdemServicoes/Index"><h4>Ordem de Serviço</h4></a>
    <hr />
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-lg-4 col-sm-12">
                @Html.AntiForgeryToken()
                @Html.LabelFor(model => model.MaquinaId, "Máquina", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownList("MaquinaId", null, htmlAttributes: new { @class = "form-control" })
                @Html.HiddenFor(model => model.MaquinaId)
                @Html.ValidationMessageFor(model => model.MaquinaId, "", new { @class = "text-danger" })

            </div>
        </div>
        <br />
        <div class="container col-md-12">
            <div class="form-group text-center">
                <div class="col-md-10 ">
                    <input type="submit" value="Gerar Relatório" class="btn btn-default" />
                    <p style="color:red;">@ViewBag.Error</p>
                </div>
            </div>
        </div>
    }
</div>

