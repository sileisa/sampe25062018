@model Sampe.Maquina

@{
    ViewBag.Title = "Editar Máquina";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container ">
        <div class="col-xs-10 col-sm-10 col-md-6">
			<ol class="breadcrumb">
				<li><a href="/Home/Index">Home</a></li>
				<li><a href="/Home/Cadastros">Cadastros</a></li>
				<li><a href="/Maquinas/Index">Máquinas</a></li>
				<li class="active">Editar</li>
			</ol>
            <h4>Editar Máquina</h4>
            <div class="divider"></div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaquinaId)
            <div class="form-group">
                @Html.LabelFor(model => model.NomeMaquina, "Máquina", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NomeMaquina, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeMaquina, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a class="btn btn-default " href="/Maquinas/Index">Voltar</a>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
