@model Sampe.Molde

@{
    ViewBag.Title = "Editar Molde";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container ">
        <div class="col-xs-10 col-sm-10 col-md-6">
			<ol class="breadcrumb">
				<li><a href="/Home/Index">Home</a></li>
				<li><a href="/Home/Cadastros">Cadastros</a></li>
				<li><a href="/Moldes/Index">Moldes</a></li>
				<li class="active">Editar</li>
			</ol>
            <h4>Editar Molde</h4>
            <div class="divider"></div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MoldeId)
            <div class="form-group">
                @Html.LabelFor(model => model.NomeMolde, "Molde", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NomeMolde, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeMolde, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Cavidade, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Cavidade, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cavidade, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                    <a class="btn btn-default" href="/Moldes/Index">Voltar</a>
                </div>
            </div>
        </div>
    </div>
}





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
