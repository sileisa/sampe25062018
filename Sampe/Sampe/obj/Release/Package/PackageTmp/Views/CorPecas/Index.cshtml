@model IEnumerable<Sampe.CorPeca>
@{
    ViewBag.Title = "Cores";
}
<ol class="breadcrumb">
	<li><a href="/Home/Index">Home</a></li>
	<li><a href="/Home/Cadastros">Cadastros</a></li>
	<li class="active">Cores de Copos</li>
</ol>
<h2>Cores</h2>
<div class="container ">
    <div class="col-xs-12 col-sm-12 col-md-6">
        <table class="table table-bordered table-responsive">
            <tr>
                <th>
                    Cor
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCorPeca)
                    </td>
                    <td>
                        <a href="/CorPecas/Edit/@item.CorPecaId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="/CorPecas/Delete/@item.CorPecaId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <!-- CorPeca corPeca = new CorPeca();-->
        <div class="container ">
            <div class="col-xs-12 col-sm-12 col-md-6">
                <h4>Cor</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2" for="NomeCorPeca">Cor</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="NomeCorPeca" name="NomeCorPeca" type="text" value="">
                        <span class="field-validation-valid text-danger" data-valmsg-for="NomeCorPeca" data-valmsg-replace="true"></span>
                        <p style="color:red;">@ViewBag.Error</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Nova Cor" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>

