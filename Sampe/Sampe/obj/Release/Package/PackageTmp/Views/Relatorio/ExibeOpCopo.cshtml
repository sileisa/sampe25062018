@model IEnumerable<Sampe.Models.OrdemProducaoCopo>

@{
	ViewBag.Title = "ExibeOpCopo";
	Layout = "~/Views/Relatorio/LayoutRelatorio.cshtml";
}

@foreach (var item in Model)
{
	<div class="container">

		<div>
			<table class="table table-bordered">
				<tr>
					<th>
						<div class="col-md-4 ">
							<img class="img-responsive " src="~/img/marcanti.gif" style="height: 80px;width: 250px;">
						</div>
					</th>
					<th>
						<div class="col-md-4 text-center">
							<h4>Ordens de Produção </h4>
							<h4>COPO</h4>
							<h4>@item.CodigoIdentificador</h4>
						</div>
					</th>
					<th>
						<div class="col-md-4">
							<img class="img-responsive " src="~/img/marca.png" style="margin:0 auto; width:180px; height:100px;">
						</div>
					</th>
				</tr>
			</table>

			<div class="row">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Produto</th>
							<th>Total Produzido</th>
							<th>Data</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.Expectativa.Produto)</td>
							<td>@Html.DisplayFor(model => item.TotalProduzidos)</td>
							<td>@item.Data.ToString("dd/MM/yyyy")</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Produção Inicio</th>
							<th>Produção Fim</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.ProdIncio)</td>
							<td>@Html.DisplayFor(model => item.ProdFim)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />


			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Máquina</th>
							<th>Matéria-Prima</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.Maquina.NomeMaquina)</td>
							<td>@Html.DisplayFor(model => item.MateriaPrima)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Matéria-Prima (Lote)</th>
							<th>Consumo Matéria-Prima</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.MPLote)</td>
							<td>@Html.DisplayFor(model => item.MPConsumo)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />



			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Temperatura Água</th>
							<th>Nível Óleo</th>
							<th>Refugo</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.TempAgua)</td>
							<td>@Html.DisplayFor(model => item.NivelOleo)</td>
							<td>@Html.DisplayFor(model => item.RefugoKg) Kg</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<table class="table table-bordered  ">
					<thead>
						<tr>
							<th>Contador Inical</th>
							<th>Contador Final</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@Html.DisplayFor(model => item.ContadorInicial)</td>
							<td>@Html.DisplayFor(model => item.ContadorInicial)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<br /><br />

			<div class="row">
				<h4>Especificações</h4>
				<hr />
				<table class="table table-bordered table-responsive">
					<thead>
						<tr>
							<th>Cor</th>
							<th>Unidades Produzidas</th>
							<th>Lote Master</th>
						</tr>
					</thead>
					<tbody id="esp">
						@foreach (var x in item.EspecificacoesCopo)
						{
							<tr id="linha">
								<td>@x.Cor.NomeCor</td>
								<td>@x.UniProd</td>
								<td>@x.LoteMaster</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<br />

			<div class="row">
				<h4>Pausa</h4>
				<hr />
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Hora Inicio</th>
							<th>Hora Retorno</th>
							<th>Motivo</th>
							<th>Observações</th>
						</tr>
					</thead>
					<tbody id="pausa">
						@foreach (var y in item.ParadasCopo)
						{
							<tr id="linha2">
								<td>@y.HoraParada</td>
								<td>@y.HoraRetorno</td>
								<td>@y.Motivo</td>
								<td>@y.Observacoes</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<br />
			<div class="row">
				<h4>Controle de Qualidade</h4>
				<hr />
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Hora</th>
							<th>Ciclo</th>
							<th>Peso da Peça</th>
							<th>Inspeção</th>
							<th>Assinatura</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var z in item.ControleDeQualidadeCopos)
						{
							<tr>
								<td>@z.Hora</td>
								<td>@z.Ciclo</td>
								<td>@z.PesoDaPeca | @z.PesoDaPeca2</td>
								<td>@Html.DisplayFor(model => z.Peso) Peso @Html.DisplayFor(model => z.Cor) Cor @Html.DisplayFor(model => z.Dimensao) Dimensão</td>
								<td>@z.Usuario.NomeUsuario</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<br /><br />
			@Html.DisplayFor(model => item.Status) Validação do Supervisor
		</div>
	</div>
}