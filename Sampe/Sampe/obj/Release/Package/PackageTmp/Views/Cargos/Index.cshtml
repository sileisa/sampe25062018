@model IEnumerable<Sampe.Cargo>
@{
    ViewBag.Title = "Cargos";
}
<ol class="breadcrumb">
	<li><a href="/Home/Index">Home</a></li>
	<li><a href="/Home/Cadastros">Cadastros</a></li>
	<li class="active">Cargos</li>
</ol>
<h2>Cargos</h2>
<div class="container ">
    <div class="col-xs-12 col-sm-12 col-md-6">

        <table class="table  table-bordered table-responsive">
            <tr>
                <th>
                    Cargo
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCargo)
                    </td>
                    <td>
                        <a href="/Cargos/Edit/@item.CargoId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="/Cargos/Delete/@item.CargoId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        Cargo cargo = new Cargo();
        <div class="container ">
            <div class="col-xs-12 col-sm-12 col-md-6">
                <h4>Novo Cargo</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(Cargo => cargo.NomeCargo, "Cargo", htmlAttributes: new { @class = "control-label col-md-4 " })
                    <div class="col-md-10">
                        @Html.EditorFor(Cargo => cargo.NomeCargo, new { htmlAttributes = new { @class = "form-control" } })
                        <p style="color:red;">@ViewBag.Error</p>
                        @Html.ValidationMessageFor(Cargo => cargo.NomeCargo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <br />
                        <input type="submit" value="Novo Cargo" class="btn btn-success" />
                        <!--<a class="btn " href="/Maquinas/Index">Voltar</a>-->
                    </div>
                </div>
            </div>
        </div>

    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
