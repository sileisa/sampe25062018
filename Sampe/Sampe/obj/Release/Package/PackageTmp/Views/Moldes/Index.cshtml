@model IEnumerable<Sampe.Molde>

@{
    ViewBag.Title = "Molde";
}
<ol class="breadcrumb">
	<li><a href="/Home/Index">Home</a></li>
	<li><a href="/Home/Cadastros">Cadastros</a></li>
	<li class="active">Moldes</li>
</ol>
<h2>Moldes</h2>


<div class="container ">
    <div class="col-xs-12 col-sm-12 col-md-6">

        <table class="table table-bordered table-responsive">
            <tr>
                <th>
                    Molde
                </th>
                <th>
                    Cavidade
                </th>
				<th></th>
            </tr>

            @foreach (var item in Model )
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeMolde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cavidade)
                </td>
                <td>
                    <a href="/Moldes/Edit/@item.MoldeId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="/Moldes/Delete/@item.MoldeId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
            }

        </table>
    </div>
  
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        Molde molde = new Molde();
        <div class="container ">
            <div class="col-xs-12 col-sm-12 col-md-6">
               
                <h4>Novo Molde</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                <div class="form-group">
                    @Html.LabelFor(Molde => molde.NomeMolde, "Molde", htmlAttributes: new { @class = "control-label col-md-4" })                                       
                    <div class="col-md-10">
                        @Html.EditorFor(Molde => molde.NomeMolde, new { htmlAttributes = new { @class = "form-control" } })
                        <p style="color:red;">@ViewBag.Error</p>
                        @Html.ValidationMessageFor(Molde => molde.NomeMolde, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(Molde => molde.Cavidade, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.EditorFor(Molde => molde.Cavidade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(Molde => molde.Cavidade, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <br />
                        <input type="submit" value="Novo Molde" class="btn btn-success" />
                        <!--<a class="btn " href="/Maquinas/Index">Voltar</a>-->
                    </div>
                </div>
            </div>
        </div>

    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>

