@model Sampe.AtividadeOS

@{
    ViewBag.Title = "Editar Atividade";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
	<ol class="breadcrumb">
		<li><a href="/Home/Index">Home</a></li>
		<li><a href="/Home/Cadastros">Cadastros</a></li>
		<li><a href="/AtividadeOS/Index">Atividades Ordem de Serviço</a></li>
		<li class="active">Editar</li>
	</ol>    
    <h4>Editar Atividade</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AtividadeOSId)
    <div class="form-group">
        @Html.LabelFor(model => model.NomeAtvOs,"Atividade", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NomeAtvOs, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NomeAtvOs, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-success" />
            <a class="btn btn-default" href="/AtividadeOS/Index">Voltar</a>
        </div>
    </div>
</div>
}
