@model IEnumerable<Sampe.Maquina>
@{
    ViewBag.Title = "Máquina";
}
<ol class="breadcrumb">
	<li><a href="/Home/Index">Home</a></li>
	<li><a href="/Home/Cadastros">Cadastros</a></li>
	<li class="active">Máquinas</li>
</ol>
<h2>Máquinas</h2>
<div class="container ">
    <div class="col-xs-12 col-sm-12 col-md-6">
        <table class="table table-bordered table-responsive">
            <tr>
                <th>
                    Máquina
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeMaquina)
                    </td>
                    <td>
                        <a href="/Maquinas/Edit/@item.MaquinaId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="/Maquinas/Delete/@item.MaquinaId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <!--<div class="row center-align">
        <a class="btn " href="/Maquinas/Create">Nova Máquina</a>
    </div>-->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        Maquina maquina = new Maquina();
        <div class="container ">
            <div class="col-xs-12 col-sm-12 col-md-6">
                <h4>Nova Máquina</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(Maquina => maquina.NomeMaquina, "Máquina", htmlAttributes: new { @class = "control-label col-md-4 " })
                    <div class="col-md-10">
                        @Html.EditorFor(Maquina => maquina.NomeMaquina, new { htmlAttributes = new { @class = "form-control" } })
                        <p style="color:red;">@ViewBag.Error</p>
                        @Html.ValidationMessageFor(Maquina => maquina.NomeMaquina, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <br />
                        <input type="submit" value="Nova Máquina" class="btn btn-success" />
                        <!--<a class="btn " href="/Maquinas/Index">Voltar</a>-->
                    </div>
                </div>
            </div>
        </div>

    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>