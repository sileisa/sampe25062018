@model Sampe.Usuario
@{
    ViewBag.Title = "Novo Usuário";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container ">
        <div class="col-md-10">
			<ol class="breadcrumb">
				<li><a href="/Home/Index">Home</a></li>
				<li><a href="/Home/Cadastros">Cadastros</a></li>
				<li><a href="/Usuarios/Index">Usuários</a></li>
				<li class="active">Novo Usuário</li>
			</ol>
            <h2>Novo Usuário</h2>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(model => model.NomeUsuario, "Nome", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-12 col-md-4" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.NomeUsuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeUsuario, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.SobrenomeUsuario, "Sobrenome", htmlAttributes: new { @class = "control-label col-xs-12 col-sm-12 col-md-4" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.SobrenomeUsuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SobrenomeUsuario, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">                
                @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    <input class="form-control text-box single-line" data-val="true" data-val-required="Preencha este campo" id="Login" name="Login" type="text" onfocus="this.value = NomeUsuario.value">
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class=" form-group row">
                @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    <input class="form-control disabled" data-val="true" data-val-required="Preencha este campo" id="Senha" name="Senha" type="password" value="123456">
                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Hierarquia, htmlAttributes: new { @class = "col-md-4" })
                <div class="col-md-4">
                    <select class="form-control" id="Hierarquia" name="Hierarquia">
                        <option value="Acesso Total">Acesso Total</option>
                        <option value="Acesso Administrador">Acesso Administrador</option>
                        <option value="Acesso Supervisor">Acesso Supervisor</option>
                        <option value="Acesso Produção">Acesso Produção</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Hierarquia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.CargoId, "Cargo", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    @Html.DropDownList("CargoId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CargoId, "", new { @class = "text-danger" })
                    <br /><a class=" " href="/Cargos/Index">Novo Cargo</a>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                    <a class="btn btn-default" href="/Usuarios/Index">Voltar</a>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}